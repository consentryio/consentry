{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@consentry/core": ["packages/core/src"],
      "@consentry/next": ["packages/next/src"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist"
  }
}
